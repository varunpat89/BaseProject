<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenSmall"
        android:paddingTop="@dimen/dimenMedium"
        android:paddingBottom="@dimen/dimenMedium"
        android:rotation="180"
        android:src="@drawable/ic_go"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/textView"
        android:layout_marginTop="@dimen/dimenLarge"
        android:text="Sign up to FIAT Wallet "
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBack" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewDescription"
        style="@style/textView"
        android:layout_marginTop="@dimen/dimenLarge"
        android:paddingStart="@dimen/dimenXXLarge"
        android:paddingEnd="@dimen/dimenXXLarge"
        android:text="A verification code will be sent to the phone number registered to your OXY chat account."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCountry"
        style="@style/OutlinedBoxTextInputLayoutStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenLarge"
        android:elevation="@dimen/dimenSmall"
        android:labelFor="@+id/tieUserName"
        android:paddingStart="@dimen/dimenXXLarge"
        android:paddingEnd="@dimen/dimenXXLarge"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tieCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UAE" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewNumber"
        style="@style/textView"
        android:layout_marginTop="@dimen/dimenLarge"
        android:paddingStart="@dimen/dimenXXLarge"
        android:text="+971"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@id/tilCountry"
        app:layout_constraintTop_toBottomOf="@+id/tilCountry" />


    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenSmall"
        android:background="@null"
        android:focusable="true"
        android:hint="xx xxx xxxx"
        android:maxLength="9"
        android:inputType="numberDecimal"
        android:digits="01234567890"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/textViewNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNumber" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenXLarge"
        android:layout_marginEnd="@dimen/dimenXLarge"
        android:layout_marginBottom="@dimen/dimenLarge"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:cornerRadius="@dimen/dimenXSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
