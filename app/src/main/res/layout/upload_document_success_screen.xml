<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimenLarge"
    android:paddingTop="@dimen/dimenXXLarge"
    android:paddingEnd="@dimen/dimenLarge"
    android:paddingBottom="@dimen/dimenXXLarge">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgThumb"
        android:layout_width="@dimen/iconSize"
        android:layout_height="@dimen/iconSize"
        android:elevation="@dimen/dimenMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        style="@style/textView"
        android:layout_marginTop="@dimen/dimenLarge"
        android:text="@string/upload_successful"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgThumb" />


</LinearLayout>