<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimenMedium"
            android:paddingEnd="@dimen/dimenMedium"
            android:paddingBottom="@dimen/dimenMedium"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewTitle"
            style="@style/textView"
            android:layout_marginStart="@dimen/dimenXXLarge"
            android:layout_marginTop="@dimen/dimenLarge"
            android:text="Email"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgClose" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCountry"
            style="@style/OutlinedBoxTextInputLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenXXLarge"
            android:layout_marginTop="@dimen/dimenLarge"
            android:layout_marginEnd="@dimen/dimenXXLarge"
            android:elevation="@dimen/dimenSmall"
            android:labelFor="@+id/tieUserName"
            app:errorEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tieCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_address" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchMangoOffer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenXLarge"
            android:layout_marginEnd="@dimen/dimenXLarge"
            android:text="@string/mango_offer_info"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tilCountry"
            app:layout_constraintTop_toBottomOf="@+id/tilCountry" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTerms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenXLarge"
            android:layout_marginEnd="@dimen/dimenXLarge"
            android:text="@string/terms_info"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tilCountry"
            app:layout_constraintTop_toBottomOf="@+id/switchMangoOffer" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimenXLarge"
            android:layout_marginEnd="@dimen/dimenXLarge"
            android:layout_marginBottom="@dimen/dimenLarge"
            android:backgroundTint="@color/primary"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/continues"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:cornerRadius="@dimen/dimenXSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
